{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "dist",
        "declaration": true,

        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "alwaysStrict": true,

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}